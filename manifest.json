{
  "name": "AKASHIc Record",
  "description": "AKASHIのAPIを使って、従業員ごとの労働日、工数入力、それぞれの入力間違い(未入力含む)の数をCSVで出力します。",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "sidePanel"
  ],
  "host_permissions": [
    "https://atnd.ak4.jp/",
    "https://atnd-awj.ak4.jp/"
  ],
  "action": {
    "default_icon": "action/akashic-record-icon.png"
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "side_panel": {
    "default_path": "side_panel/index.html"
  }
}
